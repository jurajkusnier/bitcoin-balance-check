<resources>

    <style name="ShapeAppearanceOverlay.WealthCheck.MaterialCardView" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">?android:colorBackground</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.WealthCheck.MaterialCardView
        </item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?colorOnSurface</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">@null</item>
        <item name="strokeWidth">0dp</item>
        <item name="icon">@drawable/ic_more_vert_white_24dp</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/dialogEdit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:padding="20dp"
    >

        <TextView
                android:id="@+id/textInfo"
                android:text="@string/add_dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

        <TextView
                android:id="@+id/textAddressLabel"
                android:text="@string/address"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/textInfo"
        />

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTextWalletAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_address"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:inputType="text"
                android:backgroundTint="@color/colorPrimary"
                android:textCursorDrawable="@null"
                android:imeOptions="actionDone"
                android:layout_marginRight="65dp"
                app:layout_constraintTop_toBottomOf="@id/textAddressLabel"
        />

        <ImageButton
                android:id="@+id/buttonAddClipboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_content_paste_white_24dp"
                app:layout_constraintBottom_toBottomOf="@id/editTextWalletAddress"
                app:layout_constraintTop_toTopOf="@id/editTextWalletAddress"
                app:layout_constraintStart_toEndOf="@id/editTextWalletAddress"
                app:layout_constraintEnd_toEndOf="parent"
        />

    </android.support.constraint.ConstraintLayout>


<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="20dp">








</LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_qr_button"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/imageViewQrCodeDetail"
            app:layout_constraintTop_toBottomOf="@id/textViewBitcoinAddress"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_address"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="40dp"
            android:textColor="@color/colorDarkerGrey"
            android:id="@+id/textViewBitcoinAddress"
    />


    </androidx.constraintlayout.widget.ConstraintLayout>